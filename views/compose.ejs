<%- include('partials/header') %>
<div class="bg-light p-5 rounded">
    <div class="center">
        <h1>Compose</h1>
    </div>

    <div class="box">
        <form action="/compose" method="post" class="form-group">
        <div class="smallbox">
            <input class="form-control" type="text" name="title" placeholder="Enter title">
        </div>
        <div class="smallbox">
            <textarea class="form-control" type="textarea" name="text" rows="10" placeholder="Enter text"></textarea>
        </div>

        <div class="smallbox">
            <button type="submit" class="btn btn-primary">Publish</button>
        </div>
        </form>
    </div>
</div>
<%- include('partials/footer')%>